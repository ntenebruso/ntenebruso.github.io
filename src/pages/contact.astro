---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Contact Me">
    <main class="max-w-3xl mx-auto px-5 mt-8 mb-5">
        <h1 class="text-5xl font-bold text-center mb-5">Contact Me</h1>
        <p class="text-center text-lg">
            To get in touch, please utilize one of the options below.
        </p>
        <hr class="w-28 h-1 mx-auto my-11 border-none bg-brand rounded-full" />
        <h2 class="text-3xl font-bold mb-5 text-center">Complete the Form</h2>
        <form
            action="https://formsubmit.co/b3835166127a8242b453ba074face6ff"
            method="POST"
            class="mb-10 text-lg"
        >
            <label for="name">Name</label>
            <input class="mb-3" type="text" name="name" id="name" required />

            <label for="email">Email</label>
            <input class="mb-3" type="email" name="email" id="email" required />

            <label for="message">Message</label>
            <textarea class="h-52 mb-3" name="message" id="message" required
            ></textarea>

            <button class="btn text-lg" type="submit">Submit</button>
        </form>
        <h2 class="text-3xl font-bold mb-5 text-center">Email Me</h2>
        <p>
            <div
                class="flex flex-wrap items-center justify-center gap-2 text-lg"
            >
                <a href="mailto:nick@ntenebruso.com" class="btn"
                    ><i class="icon-mail align-middle leading-none"></i> nick@ntenebruso.com</a
                >
                <a href="mailto:nickten2006@gmail.com" class="btn secondary"
                    ><i class="icon-mail align-middle leading-none"></i> nickten2006@gmail.com</a
                >
                <a href="/pubkey.asc" download class="btn"
                    ><i class="icon-download align-middle leading-none"></i> Download
                    PGP key</a
                >
            </div>
        </p>
    </main>
</Layout>
