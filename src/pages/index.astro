---
import Layout from "@layouts/Layout.astro";
import Tags from "@components/Tags.astro";
import Projects from "@components/Projects.astro";
---

<Layout
    title="Nick Tenebruso's Portfolio"
    description="Hi, I'm Nick Tenebruso. I'm a web developer who likes designing and programming open-source projects."
>
    <main>
        <section
            class="max-w-5xl mx-auto px-5 py-32 flex flex-col justify-center"
        >
            <h2 class="text-4xl font-bold">Hi, I'm Nick Tenebruso ðŸ‘‹</h2>
            <h3 class="text-xl mt-2 text-zinc-500 dark:text-zinc-400">
                A web developer who likes designing and programming open-source
                projects.
            </h3>
            <p class="mt-5">
                Welcome to my website! I am currently 17 years old and I have
                been doing web development for three years. I mainly work on
                coding projects as a hobby of mine and I have always had a
                strong passion for programming.
            </p>
            <div class="mt-5 flex flex-wrap gap-2">
                <a href="#tech"
                    ><button class="btn whitespace-nowrap">Technologies</button>
                </a>
                <a href="#projects"
                    ><button class="btn whitespace-nowrap">Projects</button>
                </a>
                <a href="mailto:nick@ntenebruso.com"
                    ><button class="btn whitespace-nowrap">Contact me</button>
                </a>
            </div>
        </section>
        <section class="max-w-5xl mx-auto px-5" id="tech">
            <h2 class="text-4xl font-bold text-center mb-4">My Tech Stack</h2>
            <div class="rounded-md p-4 bg-gray-200 dark:bg-zinc-800">
                <p>
                    I always try to keep myself up-to-date with the latest
                    technologies. I extensively modify my tech stack in order to
                    build beautiful & performant apps as efficiently as
                    possible.
                </p>
                <h3 class="mt-5 mb-2 text-2xl font-bold">Languages</h3>
                <Tags
                    tags={[
                        "HTML",
                        "CSS",
                        "Javascript",
                        "Typescript",
                        "C",
                        "C++",
                        "C#",
                        "Python",
                        "Go",
                        "Rust",
                    ]}
                    class="bg-brand py-2 px-3 text-zinc-200 rounded-md"
                />
                <h3 class="mt-5 mb-2 text-2xl font-bold">Tools</h3>
                <Tags
                    tags={["NodeJS", "Docker", "PostgreSQL", "MongoDB", "Git"]}
                    class="bg-brand py-2 px-3 text-zinc-200 rounded-md"
                />
                <h3 class="mt-5 mb-2 text-2xl font-bold">Frameworks</h3>
                <Tags
                    tags={[
                        "React",
                        "Vue",
                        "Astro",
                        "Hugo",
                        "Vite",
                        "Tailwindcss",
                        "Express",
                        "Prisma",
                        "Mongoose",
                        "Qt",
                        "GTK",
                    ]}
                    class="bg-brand py-2 px-3 text-zinc-200 rounded-md"
                />
                <h3 class="mt-5 mb-2 text-2xl font-bold">Other</h3>
                <Tags
                    tags={["Linux", "Emacs", "Vim", "VSCode", "Bash"]}
                    class="bg-brand py-2 px-3 text-zinc-200 rounded-md"
                />
            </div>
        </section>
        <section class="max-w-5xl mx-auto px-5 mt-20" id="projects">
            <h2 class="text-4xl font-bold text-center mb-4">Projects</h2>
            <Projects />
        </section>
    </main>
</Layout>
