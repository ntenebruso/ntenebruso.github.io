---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
    href: string;
}

const { href, ...props } = Astro.props;

let isActive;
if (href == "/") {
    isActive = href == Astro.url.pathname;
} else {
    isActive = Astro.url.pathname.includes(href);
}
---

<a
    href={href}
    class={`hover:no-underline transition-colors hover:!text-zinc-800 hover:dark:!text-zinc-300 ${isActive ? "text-zinc-800 dark:text-zinc-300 group-hover:text-zinc-700 group-hover:dark:text-zinc-400" : "text-zinc-700 dark:text-zinc-400"}`}
    {...props}
>
    <slot />
</a>
