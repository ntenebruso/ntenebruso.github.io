---
import NavLink from "./NavLink.astro";
import ThemeToggle from "./ThemeToggle.svelte";
---

<header class="max-w-5xl mx-auto px-5 flex justify-between items-center py-3 font-display">
    <span class="font-bold text-3xl">Nick Tenebruso</span>
    <div class="flex gap-x-3 relative">
        <ThemeToggle client:only="svelte" />
        <button
            id="menu-btn-open"
            class="rounded-full w-10 h-10 dark:bg-zinc-800 bg-gray-200 border-[1px] border-gray-300 dark:border-zinc-700 block md:hidden leading-[0px]"
            aria-label="Open menu"
        >
            <i class="fa-solid fa-bars"></i>
        </button>
        <nav
            id="menu"
            class="flex items-center bg-gray-200 dark:bg-zinc-800 px-4 md:h-10 md:rounded-full md:border-[1px] md:border-gray-300 dark:border-zinc-700 md:relative fixed top-0 left-0 right-0 text-center transition-transform -translate-y-full md:translate-y-0"
        >
            <button
                id="menu-btn-close"
                class="rounded-full w-10 h-10 dark:bg-zinc-800 bg-gray-200 border-[1px] border-gray-300 dark:border-zinc-700 block md:hidden absolute top-2 right-2"
                ><i class="fa-solid fa-xmark"></i>
            </button>
            <ul
                class="flex flex-col md:flex-row gap-x-4 gap-y-10 font-semibold mx-auto py-10 md:py-0 text-3xl md:text-base"
            >
                <li>
                    <NavLink href="/">Home</NavLink>
                </li>
                <li>
                    <NavLink href="/posts">Blog</NavLink>
                </li>
                <li>
                    <NavLink
                        href="/contact"
                    >
                        Contact
                    </NavLink>
                </li>
            </ul>
        </nav>
    </div>
</header>

<script is:inline>
    const menuOpenBtn = document.getElementById("menu-btn-open");
    const menuCloseBtn = document.getElementById("menu-btn-close");
    const menu = document.getElementById("menu");

    menuOpenBtn.addEventListener("click", () => {
        menu.classList.remove("-translate-y-full");
    });

    menuCloseBtn.addEventListener("click", () => {
        menu.classList.add("-translate-y-full");
    });
</script>
